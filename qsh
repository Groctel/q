#!/usr/bin/sh

qshdir="$HOME/.q/"
qshfile="$qshdir""q"

init () {
	[ ! -f "$qshfile" ] && {
		[ ! -d "$qshfile" ] && {
			mkdir -p "$qshdir"
		}
		touch "$qshfile"
	}
}

init

if [ $# -eq 0 ]; then
	if [ -s "$qshfile" ]; then
		sed q "$qshfile"
		sed -i '1d' "$qshfile"
	else
		echo "Nothing in your q!"
	fi
else
	echo "$1" >> "$qshfile"
fi
